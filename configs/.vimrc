syntax on

set tabstop=4
set softtabstop=4
set shiftwidth=4
set textwidth=79
set expandtab
set autoindent
set showmatch

" enable highlight search pattern
set hlsearch

" enable mouse support
set mouse=a

" highlight current line
" set cursorline

" enable smartcase search sensitivity
set ignorecase
set smartcase

" remove trailing whitespace from Python files "
autocmd BufWritePre *.py :%s/\s\+$//e
